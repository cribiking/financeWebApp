@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Finance Control</h1>
    <h6>The new way to have control over your expenses</h4>
</div>

<div class="d-grid gap-2 col-6 mx-auto mt-4"> 
    
    <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle"></i> Create New Expense 
    </a>
    
    <a asp-controller="Expenses" asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="bi bi-list-ul"></i> View All Expenses
    </a>
    
</div>
