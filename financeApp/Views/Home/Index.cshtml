@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center py-5 bg-light rounded-3 mb-4">
    <div class="container">
        <h1 class="display-3 fw-bold text-primary mb-3">Smart Finance Control</h1>
        <p class="lead mb-4">Take control of your expenses with our intuitive tracking system</p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle-fill me-2"></i> Add Expense
            </a>
            <a asp-controller="Expenses" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-graph-up me-2"></i> View Dashboard
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up-arrow text-primary display-4 mb-3"></i>
                    <h3 class="card-title h4">Track Expenses</h3>
                    <p class="card-text text-muted">Monitor your spending patterns and stay within budget</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-pie-chart-fill text-primary display-4 mb-3"></i>
                    <h3 class="card-title h4">Visual Analytics</h3>
                    <p class="card-text text-muted">Get insights with beautiful charts and reports</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-piggy-bank-fill text-primary display-4 mb-3"></i>
                    <h3 class="card-title h4">Save Money</h3>
                    <p class="card-text text-muted">Identify areas to cut costs and save more</p>
                </div>
            </div>
        </div>
    </div>

    <div class="quick-actions bg-light rounded-3 p-4 mb-4">
        <h2 class="h3 mb-4">Quick Actions</h2>
        <div class="row g-3">
            <div class="col-sm-6 col-lg-3">
                <a asp-controller="Expenses" asp-action="Create" class="card bg-primary text-white border-0">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-plus-circle-fill fs-3 me-3"></i>
                        <span>New Expense</span>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 col-lg-3">
                <a asp-controller="Expenses" asp-action="Index" class="card bg-success text-white border-0">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-table fs-3 me-3"></i>
                        <span>View All</span>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 col-lg-3">
                <a href="#" class="card bg-info text-white border-0">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-bar-chart-fill fs-3 me-3"></i>
                        <span>Analytics</span>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 col-lg-3">
                <a href="#" class="card bg-warning text-white border-0">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-gear-fill fs-3 me-3"></i>
                        <span>Settings</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
